<div class="main-content">
    <div class="slider" id="slider">
         {{#each sliderProducts}}            
            <div class="slider-item"><a href="/product/{{_id}}"><img src="{{imgUrl}}" alt="{{productName}}"></a></div>
        {{/each}}
    </div>
</div>  
<div class="store-options">
    <b>Опции</b><br>
    <u>Не выбраны</u>
</div>
<div class="store-content">
    <div class="store-text">Товары: 6654</div>
    {{#each products}}
        <div class="store-item"><a href="/product/{{_id}}"><img src="{{imgUrl}}" alt="{{productName}}"></a></div>
    {{/each}}
</div>

<script>
$('#slider').slick({
    dots: false,
    autoplay: true,
    autoplaySpeed: 2000,
    infinite: true,
    centerMode: true,
    variableWidth: true,
    slidesToShow: 5,
    slidesToScroll: 1
});

</script>
